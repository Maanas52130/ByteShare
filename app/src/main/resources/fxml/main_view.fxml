<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Text?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" 
            fx:controller="org.example.controller.MainController"
            prefWidth="500" prefHeight="350" 
            styleClass="main-background">

    <Text text="Welcome to ByteShare" layoutX="140" layoutY="70" styleClass="title-text"/>

    <Button text="Sender" layoutX="150" layoutY="150" 
            prefWidth="200" prefHeight="50" 
            styleClass="main-button" 
            onAction="#onSenderClick"/>

    <Button text="Receiver" layoutX="150" layoutY="220" 
            prefWidth="200" prefHeight="50" 
            styleClass="main-button" 
            onAction="#onReceiverClick"/>

</AnchorPane>
